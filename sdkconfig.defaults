# Arduino MKR WIFI 1010
# CONFIG_ESPTOOLPY_PORT="/dev/ttyACM0"

# ESP32MiniKit Wemos
CONFIG_ESPTOOLPY_PORT="/dev/ttyUSB0"

#CONFIG_ESPTOOLPY_BAUD_115200B=
CONFIG_ESPTOOLPY_BAUD_921600B=y
#CONFIG_ESPTOOLPY_BAUD=921600

# custom partition table
##CONFIG_PARTITION_TABLE_SINGLE_APP=
#CONFIG_PARTITION_TABLE_CUSTOM=y
#CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

CONFIG_PARTITION_TABLE_SINGLE_APP=y

# monitor and console (stdio)
CONFIG_MONITOR_BAUD=115200
CONFIG_CONSOLE_UART_DEFAULT=y
CONFIG_CONSOLE_UART_BAUDRATE=115200

# enable JTAG debugging
CONFIG_ESP32_DEBUG_OCDAWARE=y
CONFIG_ESP32_DEBUG_STUBS_ENABLE=y


# system stuff
#CONFIG_STACK_CHECK=y
#CONFIG_STACK_CHECK_NONE=
CONFIG_STACK_CHECK_NORM=y
CONFIG_FREERTOS_HZ=1000
CONFIG_SUPPORT_STATIC_ALLOCATION=y
#CONFIG_ENABLE_STATIC_TASK_CLEAN_UP_HOOK=
CONFIG_FREERTOS_USE_TRACE_FACILITY=y
CONFIG_FREERTOS_USE_STATS_FORMATTING_FUNCTIONS=y
CONFIG_FREERTOS_VTASKLIST_INCLUDE_COREID=y
CONFIG_FREERTOS_GENERATE_RUN_TIME_STATS=y
CONFIG_FREERTOS_RUN_TIME_STATS_USING_ESP_TIMER=y
#CONFIG_FREERTOS_RUN_TIME_STATS_USING_CPU_CLK=
CONFIG_MAIN_TASK_STACK_SIZE=8192

CONFIG_ESP32_DEFAULT_CPU_FREQ_80=y
CONFIG_ESP32_DEFAULT_CPU_FREQ_MHZ=80

CONFIG_LOG_DEFAULT_LEVEL_DEBUG=y
CONFIG_LOG_DEFAULT_LEVEL=4
#CONFIG_LOG_DEFAULT_LEVEL_INFO=y
#CONFIG_LOG_DEFAULT_LEVEL=3
#CONFIG_LOG_DEFAULT_LEVEL_WARN=y
#CONFIG_LOG_DEFAULT_LEVEL=2

CONFIG_SYSTEM_EVENT_TASK_STACK_SIZE=4096

CONFIG_TCPIP_TASK_STACK_SIZE=4096
#CONFIG_TCPIP_TASK_AFFINITY_NO_AFFINITY=
CONFIG_TCPIP_TASK_AFFINITY_CPU0=y
CONFIG_TCPIP_TASK_AFFINITY=0x0

# smaller binary size (but breaks GDB)
#CONFIG_OPTIMIZATION_LEVEL_RELEASE=y
#CONFIG_OPTIMIZATION_ASSERTIONS_SILENT=y


# eof
